        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Content="Contour detection" Margin="3" Command="{Binding ContourDetectionCommand}" />
            <Label Content="Found:" FontWeight="Bold" Grid.Column="1" />
            <Label Content="{Binding FoundContoursCount}" Grid.Column="2" />
            <Label Content="Filter by color:" FontWeight="Bold" Grid.Column="3" />
            <CheckBox IsChecked="{Binding FilterByColor}" Grid.Column="4" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Content="Color" />
            <Slider Minimum="0" Maximum="255" Value="{Binding Color}" Margin="3" Grid.Column="1" />
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Content="Dist" />
            <Slider Minimum="0" Maximum="1000" Value="{Binding MinDist}" Margin="3" Grid.Column="1" />
        </Grid>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Content="Min" />
            <Slider Minimum="0" Maximum="1000" Value="{Binding MinArea}" Margin="3" Grid.Column="1" />
        </Grid>
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Content="Max" />
            <Slider Minimum="0" Maximum="1000" Value="{Binding MaxArea}" Margin="3" Grid.Column="1" />
        </Grid>
        <Grid Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Source="{Binding ResultImage}" MaxHeight="920" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
