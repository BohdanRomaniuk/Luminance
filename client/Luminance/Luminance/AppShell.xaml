<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Luminance.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Luminance"
    xmlns:pages="clr-namespace:Luminance.Pages"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Налаштування"
            Icon="settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />

        <ShellContent
            Title="Cканування"
            Icon="mapping"
            ContentTemplate="{DataTemplate pages:MappingPage}" />

        <ShellContent
            Title="Галерея"
            Icon="gallery"
            ContentTemplate="{DataTemplate pages:GalleryPage}" />

        <ShellContent
            Title="Створоти"
            Icon="magic_wand"
            ContentTemplate="{DataTemplate pages:GalleryPage}" />
    </TabBar>
</Shell>
